block js_here
	script.
		$(document).ready(function(){
			$(".coo li").click(function(){
				$(".coo li").removeClass("on");
				if ($("p",this).is(".hide")) {
				$(".coo li p").addClass("hide");
				$("p",this).removeClass("hide");
				$(this).addClass("on");
				}else{
				$(".coo li p").addClass("hide");
				}
			});
			$(".coo-title").click(function(){
				var ep = $(this).next();
				if (ep.is(".hide")) {
					ep.removeClass("hide");
					$(this).parent().addClass("on");
				}else{
					ep.addClass("hide");
					$(this).parent().removeClass("on");
				}
			});
		});
