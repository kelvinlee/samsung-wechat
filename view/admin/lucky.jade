extends layout
block content_here
	-function getDates(date){ if (date == null){return "";} return date.getFullYear()+"-"+(date.getMonth()+1)+"-"+date.getDate(); }
	.content
		div.content-padded
			-if (lucky != null)
				table(style="text-align:left;width:100%")
					thead
						tr
							th.sorting_desc 电话
							th 姓名
							th 奖品
							th 地址 
					tbody
						-for(var i=0;i<lucky.length;i++)
							-if (lucky[i].content != "六等奖")
								tr
									td #{lucky[i].mobile} 
									td #{lucky[i].username}
									td #{lucky[i].content}
									td #{lucky[i].adr}
									td #{getDates(lucky[i].create_at)}
